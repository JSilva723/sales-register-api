{
    "compilerOptions": {
        "target": "ES5",
        "module": "ES6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@presentation/*": [
                "./src/presentation/*"
            ],            
            "@context/*": [
                "./src/context/*"
            ],
            "@config/*": [
                "./src/config/*"
            ],
            "@shared/*": [
                "./src/shared/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src",
        "tests"
    ]
}